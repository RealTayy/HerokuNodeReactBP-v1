  },
  "homepage": "https://github.com/RealTayy/HerokuNodeReactBP-v1#readme",
  "dependencies": {
    "per-env": "^1.0.2"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.3"
  }
}