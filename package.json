{
  "name": "HerokuNodeReactBP-v1",
  "version": "1.0.0",
  "description": "Heroku App BP",
  "engines": {
		"node": "12.16.2"
	},
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run client\" \"npm run server\"",
    
    "client": "per-env",
    "client:development": "cd client && npm run start",
    "client:production": "cd client && npm run start",

    "install": "cd client && npm install",
    
    "server": "per-env",
    "server:development": "cd server && npm run start",
    "server:production": "cd server && npm run start",    
    
    "heroku-postbuild": "npm run build",
    "build": "cd client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RealTayy/HerokuNodeReactBP-v1.git"
  },
